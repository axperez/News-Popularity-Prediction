from sklearn.decomposition import PCA as sklearnPCA
from sklearn.preprocessing import StandardScaler

pca = sklearnPCA(n_components=2) #2-dimensional pca

std_tr_x_fb = StandardScaler().fit_transform(TR_X_fb)
std_tr_x_gp = StandardScaler().fit_transform(TR_X_gp)
std_tr_x_li = StandardScaler().fit_transform(TR_X_li)

fb_components = pd.DataFrame(pca.fit_transform(std_tr_x_fb))
gp_components = pd.DataFrame(pca.fit_transform(std_tr_x_gp))
li_components = pd.DataFrame(pca.fit_transform(std_tr_x_li))

plt.scatter(fb_components.values[:, 0], fb_components.values[:, 1], label='fb train', c='red')
plt.scatter(gp_components.values[:, 0], gp_components.values[:, 1], label='gp train', c='blue')
plt.scatter(li_components.values[:, 0], li_components.values[:, 1], label='li train', c='lightgreen')

plt.xlabel('component 1')
plt.ylabel('component 2')

plt.legend()
plt.show()
